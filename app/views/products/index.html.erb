<p id="notice"><%= notice %></p>

<h2>Our Exclusive Guide to IELTS Success</h2>

<div id="container">
  <h2>Dan Carey and Calum Nicolson</h2>
  <!-- Contact -->
  <div data-stellar-background-ratio=".5"></div>
  <div class="container anchor" id="info">
    <div class="header-contact">
      <h3>Start Your Journey</h3>
    </div><!--end header div-->

<%= link_to 'New Product', new_product_path %>
    <% @products.each do |product| %> 
      <div class="col-md-4">
         <%= image_tag(product.image_url, class: "img-responsive") if product.image_url %>
         <%= product.name %>
         <%= product.price %>
         <%= product.description %>
         <%= link_to product.name, product_path(product), :class => "btn-default" %>
         <%= link_to 'Edit', edit_product_path(product),:class => "btn btn-default" %>
         <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
          
      </div>
    <% end %>
      
  



