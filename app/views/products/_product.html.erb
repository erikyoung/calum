
<% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
         <%= image_tag(product.image_url, class: "img-responsive")  %>
         <%= product.name %>
         <%= product.price %>
         <%= product.description %>
         <%= link_to product.name, product_path(product), :class => "btn-default" %>
         <%= link_to 'Show', product, :class => "btn btn-default"%>
         <%= link_to 'Edit', edit_product_path(product),:class => "btn btn-default" %>
         <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default" %>
          <br />
          <br />
          <br />
      </div>
    <% end %>